= form_for @person, :html => { :class => "form-horizontal" } do |f|
  -if @person.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"

      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :company, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :company, :class => 'form-control'
  .form-group
    = f.label :phone, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :phone, :class => 'form-control'
  .form-group
    = f.label :country, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :country, :class => 'form-control'
  .form-group
    = f.label :state, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :state, :class => 'form-control'
  .form-group
    = f.label :city, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :city, :class => 'form-control'
  .form-group
    = f.label :zip, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :zip, :class => 'form-control'
  .form-group
    = f.label :street, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :street, :class => 'form-control'
  .form-group
    = f.label :email, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :email, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
