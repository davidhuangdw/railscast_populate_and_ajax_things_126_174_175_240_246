.page-header
  = link_to new_person_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Person
  %h1 Listing people

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Company
        %th Phone
        %th Country
        %th State
        %th City
        %th Zip
        %th Street
        %th Email
        %th
        %th
        %th

    %tbody
      - @people.each do |person|
        %tr
          %td= person.name
          %td= person.company
          %td= person.phone
          %td= person.country
          %td= person.state
          %td= person.city
          %td= person.zip
          %td= person.street
          %td= person.email
          %td= link_to 'Show', person
          %td= link_to 'Edit', edit_person_path(person)
          %td= link_to 'Destroy', person, :data => { confirm: 'Are you sure?' }, :method => :delete
